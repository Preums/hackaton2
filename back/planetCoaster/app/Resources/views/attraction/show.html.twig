{% extends 'base.html.twig' %}

{% block body %}
    <h1>Attraction</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attraction.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ attraction.name }}</td>
            </tr>
            <tr>
                <th>Minage</th>
                <td>{{ attraction.minage }}</td>
            </tr>
            <tr>
                <th>Waiting</th>
                <td>{{ attraction.waiting }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ attraction.picture }}</td>
            </tr>
            <tr>
                <th>Bestlike</th>
                <td>{{ attraction.bestlike }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ attraction.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('attraction_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('attraction_edit', { 'id': attraction.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
